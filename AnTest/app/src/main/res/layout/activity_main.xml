<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:scrollbars="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List View Test " />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListView Array Adapter"
            android:textAllCaps="false"
            android:onClick="onClickListViewArrayAdapter"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListView Simple Adapter"
            android:textAllCaps="false"
            android:onClick="onClickListViewSimpleAdapter"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListView From Base Adapter"
            android:textAllCaps="false"
            android:onClick="onClickListViewBaseAdapter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Service Test" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Service"
            android:textAllCaps="false"
            android:onClick="onClickServiceStartService"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bind Service"
            android:textAllCaps="false"
            android:onClick="onClickServiceBindService"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Toast Test" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Test Page"
            android:textAllCaps="false"
            android:onClick="onClickToast"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BroadcastReceiver Test" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Test Page"
            android:textAllCaps="false"
            android:onClick="onClickBroadcastReceiverBtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ContentProvider Test" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts Test"
            android:textAllCaps="false"
            android:onClick="onClickContactsTestBtn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Provider Test"
            android:textAllCaps="false"
            android:onClick="onClickMyProviderBtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Android Dialog Test" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialog Test"
            android:textAllCaps="false"
            android:onClick="onClickDialogTestBtn"/>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:id="@+id/picbutton">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:drawableTop="@drawable/test_selector"
                android:text="Just a Button"/>
        </LinearLayout>


    </LinearLayout>

    </ScrollView>
