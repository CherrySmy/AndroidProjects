<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.customview.CustomViewGestureLockActivity">

    <com.customview.view.CustomViewGroupGestureLock
        android:id="@+id/gestureLock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f7"
        android:gravity="center_vertical"
        app:color_outer_circle="#ff08F0E0"
        app:color_inner_circle="#ff085D58"
        app:color_finger_on="#ffa4BF"/>

</RelativeLayout>
